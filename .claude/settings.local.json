{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/ensure-cwd.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(done)",
      "Bash(npm view:*)",
      "Bash(bun run typecheck:www:*)",
      "Bash(node:*)",
      "Bash(bun run typecheck:*)",
      "Bash(grep:*)",
      "WebSearch",
      "WebFetch(domain:developers.strava.com)",
      "WebFetch(domain:groups.google.com)",
      "WebFetch(domain:communityhub.strava.com)",
      "Bash(python3:*)"
    ]
  }
}
